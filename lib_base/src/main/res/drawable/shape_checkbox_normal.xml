<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="@dimen/dp_10"
                android:height="@dimen/dp_10" />

            <solid android:color="@color/transparent" />
            <stroke
                android:width="@dimen/dp_1"
                android:color="@color/colorLightGray" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/dp_5"
        android:left="@dimen/dp_5"
        android:right="@dimen/dp_5"
        android:top="@dimen/dp_5">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="@dimen/dp_10"
                android:height="@dimen/dp_10" />
            <solid android:color="@color/colorLightGray" />
        </shape>
    </item>

</layer-list>